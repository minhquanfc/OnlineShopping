<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GioHangFragment">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/bgr"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/mau_xanh">

        <TextView
            android:id="@+id/tv_giohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/lexenddeca"
            android:text="Giỏ hàng"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_diachi"
            android:layout_marginTop="100dp"
            android:layout_width="274dp"
            android:layout_height="55dp"
            android:layout_weight="0.2"
            android:width="200dp"
            android:background="@color/white"
            android:focusable="false"
            android:textSize="14dp"
            android:fontFamily="@font/lexenddeca"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

        <Button
            android:layout_marginTop="100dp"
            android:id="@+id/btn_Thaydoi"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.8"
            android:fontFamily="@font/lexenddeca"
            android:background="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Thay đổi địa chỉ"
            android:textColor="#0000FF"
            android:textSize="14dp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:height="32dp"
        android:text="   Giỏ hàng"
        android:background="#CCCCCC"
        android:textSize="14dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcview_GioHang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_Tongtien"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginTop="600dp"
            android:layout_weight="0.2"
            android:background="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/lexenddeca"
            android:gravity="left"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:text="Tổng tiền: " />

        <Button
            android:id="@+id/btn_Thanhtoan"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:layout_marginTop="600dp"
            android:layout_weight="0.8"
            android:background="@color/mau_xanh"
            android:focusable="false"
            android:focusableInTouchMode="false"

            android:fontFamily="@font/lexenddeca"
            android:text="Thanh toán"
            android:textColor="#ffffff"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>
</androidx.core.widget.NestedScrollView >