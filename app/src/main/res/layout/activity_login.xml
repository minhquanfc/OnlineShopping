<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/anhonboard2" />

        <TextView
            android:id="@+id/tv_onlineshopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexenddeca"
            android:text="Login"
            android:textColor="@color/mau_xanh"
            android:textSize="48dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_email_login"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/lexenddeca"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/skip" />

        <EditText
            android:id="@+id/ed_password_login"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/lexenddeca"
            android:hint="Password"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/skip" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="146dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button"
            android:backgroundTint="@color/mau_xanh"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca"
                android:text="Bạn chưa có tài khoản ?"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_dangky_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lexenddeca"
                android:text="Đăng ký"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressbar_sign_in"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/mau_xanh"
        android:background="@drawable/bg_progressbar"
        android:layout_centerInParent="true"
        tools:ignore="MissingClass" />
</RelativeLayout>